<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<AnchorPane fx:id="root" stylesheets="@dialogs_style.css" styleClass="content"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.raphaelcollin.appointmentscheduler.controller.AppointmentUpdateController">

    <Label fx:id="titleLabel" text="%update" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>

    <HBox fx:id="hBoxButtons" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" alignment="CENTER">
        <JFXButton fx:id="clearButton" text="%clear" onAction="#handleClear"/>
        <JFXButton fx:id="saveButton" text="%save" onAction="#handleSave" defaultButton="true"/>
    </HBox>

</AnchorPane>
