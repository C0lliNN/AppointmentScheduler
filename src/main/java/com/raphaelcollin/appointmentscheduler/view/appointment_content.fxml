<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.raphaelcollin.appointmentscheduler.controller.AppointmentController">
   <HBox fx:id="filtersHBox" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

      <HBox>
         <Label text="%tab_appointments_date_text"/>
         <JFXDatePicker fx:id="dateField" promptText="%tab_appointments_date_promptText"/>
      </HBox>
      <HBox>
         <Label text="%tab_appointments_patient_text"/>
         <JFXTextField fx:id="patientField" promptText="%tab_appointments_patient_promptText"/>
      </HBox>
      <HBox>
         <Label text="%tab_appointments_doctor_text"/>
         <JFXTextField fx:id="doctorField" promptText="%tab_appointments_doctor_promptText"/>
      </HBox>
      <HBox>
         <Label text="%tab_appointments_status_text"/>
         <JFXComboBox fx:id="statusField"/>
      </HBox>
   </HBox>

   <JFXCheckBox fx:id="allDatesCheckBox" text="%tab_appointments_check_box_text"/>

   <JFXTreeTableView fx:id="appointmentsTableView" tableMenuButtonVisible="true"
                     AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <columns>
         <TreeTableColumn fx:id="dateColumn" text="%tab_appointments_column_header0"/>
         <TreeTableColumn fx:id="scheduleColumn" text="%tab_appointments_column_header1"/>
         <TreeTableColumn fx:id="patientColumn" text="%tab_appointments_column_header2"/>
         <TreeTableColumn fx:id="descriptionColumn" text="%tab_appointments_column_header3"/>
         <TreeTableColumn fx:id="doctorColumn" text="%tab_appointments_column_header4"/>
         <TreeTableColumn fx:id="priceColumn" text="%tab_appointments_column_header5"/>
         <TreeTableColumn fx:id="statusColumn" text="%tab_appointments_column_header6"/>
      </columns>
      <columnResizePolicy>
         <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
   </JFXTreeTableView>

   <HBox fx:id="buttonsHBox" alignment="CENTER" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0">
      <JFXButton fx:id="showDetailsButton" buttonType="RAISED" onAction="#handleShowDetails"
                 text="%tab_appointments_details_button"/>
      <JFXButton fx:id="newAppointmentButton" buttonType="RAISED" onAction="#handleNewAppointment"
                 text="%tab_appointments_new_button"/>
      <JFXButton fx:id="updateAppointmentButton" buttonType="RAISED" onAction="#handleUpdateAppointment"
                 text="%tab_appointments_update_button"/>
      <JFXButton fx:id="deleteAppointmentButton" buttonType="RAISED" onAction="#handleDeleteAppointment"
                 text="%tab_appointments_delete_button"/>
   </HBox>
</AnchorPane>
