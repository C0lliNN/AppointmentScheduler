<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml" stylesheets="@dialogs_style.css" styleClass="content"
            fx:controller="com.raphaelcollin.appointmentscheduler.controller.AppointmentAddController">

    <Label fx:id="titleLabel" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" alignment="CENTER" text="%new_appointment"/>
    <HBox fx:id="hBoxButtons" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <JFXButton text="%clear" fx:id="clearButton" onAction="#handleClear"/>
        <JFXButton text="%add" fx:id="addButton" onAction="#handleAdd" defaultButton="true"/>
    </HBox>

</AnchorPane>
